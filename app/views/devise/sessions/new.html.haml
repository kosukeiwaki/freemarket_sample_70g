= render "shared/header"

.main2
.signin--page
  .sign
    .sign__container
      .sign__container--title
        %h2 ログイン
      .sign__container--form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.label :メールアドレス
            %br
            = f.email_field :email, autofocus: true, autocomplete: "email",class: "textarea"


          .field
            = f.label :パスワード
            %br
            = f.password_field :password, autocomplete: "current-password",class: "textarea"


          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :ログインしたままにする
            

          .login
            = f.submit "ログイン",class: 'login--btn'
            %br
            %h2 アカウントをお持ちでない方はこちら
        = link_to "新規登録", new_registration_path(resource_name), class: "regist--btn"

= render "shared/footer"